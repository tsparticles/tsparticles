{
  "private": true,
  "name": "tsparticles-workspace",
  "version": "0.0.0",
  "scripts": {
    "build": "pnpm run prettify:readme && lerna run build",
    "build:ci": "pnpm run prettify:ci:readme && lerna run build:ci",
    "build:docs": "rimraf -f docs && npx typedoc",
    "prettify:ci:readme": "prettier --check ./README.md && prettier --check ./traduction/* && prettier --check ./markdown/*",
    "prettify:readme": "prettier --write ./README.md && prettier --write ./traduction/* && prettier --write ./markdown/*",
    "version:alpha": "lerna version prerelease --preid alpha --conventional-commits",
    "version:beta": "lerna version prerelease --preid beta --conventional-commits",
    "publish:alpha": "lerna publish from-package --pre-dist-tag alpha --preid alpha",
    "publish:beta": "lerna publish from-package --pre-dist-tag beta --preid beta",
    "publish:next": "lerna publish from-package --dist-tag next",
    "publish:v1": "lerna publish from-package --dist-tag v1",
    "deploy:site": "lerna run deploy --scope website",
    "prepare": "husky install"
  },
  "prettier": "@tsparticles/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nrwl/cli": "^15.3.0",
    "@nrwl/nx-cloud": "^15.0.2",
    "@nrwl/workspace": "^15.3.0",
    "@parcel/core": "^2.8.0",
    "@parcel/transformer-sass": "^2.8.0",
    "@tsparticles/prettier-config": "^1.4.0",
    "@types/node": "^18.11.11",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.2",
    "ini": "^3.0.1",
    "lerna": "^6.1.0",
    "nx": "^15.3.0",
    "parcel": "^2.8.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "typedoc": "^0.23.21",
    "typedoc-plugin-carbon-ads": "^1.1.6",
    "typedoc-plugin-clarity": "^1.1.0",
    "typedoc-plugin-coverage": "^2.0.0",
    "typedoc-plugin-keyword": "^1.1.0",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.9.3",
    "yorkie": "^2.0.0"
  }
}
