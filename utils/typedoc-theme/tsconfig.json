{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2018", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "removeComments": true,
      "sourceMap": false,
      "strictNullChecks": true,
      "target": "es2018",
      "jsx": "react",
      "jsxFactory": "JSX.createElement",
      "jsxFragmentFactory": "JSX.Fragment"
    },
    "include": ["./src"]
  }