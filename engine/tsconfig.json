{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist"
  },
  "typedocOptions": {
    //"gaID": "UA-161253125-1",
    "includes": "./markdown",
    "entryPoints": [
      "./src/"
    ],
    "entryPointStrategy": "expand",
    "name": "tsParticles",
    "includeVersion": true,
    "hideGenerator": true,
    "out": "./docs",
    "theme": "tsparticles-docs"
  }
}
